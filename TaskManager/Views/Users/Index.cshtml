@model List<TaskManager.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "User Admin Panel";
}

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a href="@Url.Action("AssignRole", new { userId = user.UserId })" class="btn btn-primary">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
