@model TaskManager.ViewModels.AssignRoleViewModel

<h2>Assign Role to @Model.UserEmail</h2>
<div asp-validation-summary="All" class="text-danger"></div>


<form asp-action="AssignRole">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SelectedRoleName" value="@role.RoleName" @(role.IsSelected ? "checked" : "") />

                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>
