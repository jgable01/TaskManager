@model TaskManager.ViewModels.AllocateDevelopersViewModel

<h2>Allocate Developers to @Model.ProjectTitle</h2>

<form asp-action="AllocateDevelopers" method="post">
    <input type="hidden" asp-for="ProjectId" />
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Developer</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Developers.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Developers[i].IsSelected" />
                        <input type="hidden" asp-for="Developers[i].DeveloperId" />
                        <input type="hidden" asp-for="Developers[i].DeveloperName" />
                    </td>
                    <td>@Model.Developers[i].DeveloperName</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Allocate Developers</button>
</form>
