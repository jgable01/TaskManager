
@model TaskManager.Models.Project
@using Microsoft.AspNetCore.Identity
@using TaskManager.Areas.Identity.Data
@inject UserManager<User> UserManager 
<!--Used userManager for auto-assinging project manager-->

@{
    var isAdmin = Context.User.IsInRole("Administrator");
    var userId = UserManager.GetUserId(User);
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<h2>Create Project</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    @if (isAdmin)
    {
        <div class="form-group">
            <label asp-for="ManagerId" class="control-label"></label>
            <select asp-for="ManagerId" class="form-control" asp-items="@(ViewData["ManagerId"] as SelectList)"></select>
            <span asp-validation-for="ManagerId" class="text-danger"></span>
        </div>
    }
    else
    {
        <input type="hidden" asp-for="ManagerId" value="@userId" />
    }

    <div class="form-group">
        <label for="DeveloperIds">Available Developers</label>
        <select id="DeveloperIds" name="AvailableDeveloperIds" multiple class="form-control" asp-items="@(ViewData["DeveloperId"] as SelectList)" data-select2-multiple></select>
    </div>

    <button type="button" id="allocateDevelopersBtn" class="btn btn-primary">Allocate Developers</button>

    <div class="form-group">
        <label for="AllocatedDevelopers">Allocated Developers</label>
        <select id="AllocatedDevelopers" name="AllocatedDeveloperIds" multiple class="form-control" data-select2-multiple></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize the select2 plugin for ManagerId
            $('#ManagerId').select2({
                placeholder: "Select a project manager",
                allowClear: true
            });

            // Initialize the select2 plugin for Available Developers
            $('#DeveloperIds').select2({
                placeholder: "Select developers",
                allowClear: true,
                tags: true  // Allows user-defined tags (developers)
            });

            // Initialize the select2 plugin for Allocated Developers
            $('#AllocatedDevelopers').select2({
                placeholder: "Allocated developers",
                allowClear: true,
                tags: true  // Allows user-defined tags (developers)
            });

            $('#allocateDevelopersBtn').click(function () {
                // Move selected developers from Available Developers to Allocated Developers
                var selectedDeveloperIds = $('#DeveloperIds').val();
                $('#DeveloperIds option:selected').appendTo('#AllocatedDevelopers');

                // Trigger change event for Allocated Developers select to notify Select2
                $('#AllocatedDevelopers').trigger('change');
            });
        });
    </script>
}


